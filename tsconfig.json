{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESnext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "strict": true, //строгий режим
      "moduleResolution": "node",
       // Для абсолютного импорта
      "baseUrl": ".",
      "paths": {
        "*": ["./src/*"]
      },
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      },
      "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
      ]
  }